<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/auto_crash</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgrespass</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <mapping class="ru.job4j.accident.model.Accident"/>
        <mapping class="ru.job4j.accident.model.Rule"/>
        <mapping class="ru.job4j.accident.model.AccidentType"/>
    </session-factory>
</hibernate-configuration>